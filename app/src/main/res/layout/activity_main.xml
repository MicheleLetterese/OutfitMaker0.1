<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE500"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
    />
    
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
    />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:src="@drawable/outfit_maker_logo"
    />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
    />

    <Button
        android:id="@+id/buttonArmadio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Armadio"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image"
        android:layout_gravity="center"
        android:onClick="armadioClicked"
        android:background="@color/pink"
        />

    <Button
        android:id="@+id/buttonGenera"
        android:layout_marginBottom="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonArmadio"
        android:text="Genera Outfit"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:background="@color/pink"
        android:onClick="generaClicked"
    />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Crea Outfit"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonGenera"
        android:layout_gravity="center"
        android:background="@color/pink"
        android:onClick="creaClicked"
    />

</LinearLayout>